# ==================== Supabase Configuration ====================
# Cloud database for backup and multi-device sync
# Current Project: <your_project_ref>

VITE_SUPABASE_URL=https://<your_project_ref>.supabase.co
VITE_SUPABASE_ANON_KEY=<your_supabase_anon_or_publishable_key>
# ⚠️ 不要在前端环境变量中放 service_role key（这是最高权限密钥，只能放在后端/服务器）
# VITE_SUPABASE_SERVICE_ROLE_KEY=<never_put_service_role_in_frontend>

# ==================== Feature Flags ====================
VITE_SUPABASE_SYNC_ENABLED=true
VITE_SYNC_INTERVAL=30000
VITE_DEBUG_SYNC=false

# ==================== Database Password (for local DB if needed) ====================
DATABASE_PASSWORD=<local_db_password_if_needed>
